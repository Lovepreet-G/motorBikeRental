
@{
    ViewBag.Title = "New";
}

<h2>Add new Bike</h2>
<form action="/bike/Create" method="POST">
    <div>
        <label>Brand:</label> <input type="text" name="BikeBrand" />
    </div>
    <div>
        <label>Model Name:</label> <input type="text" name="BikeModel" />
    </div>
    <div>
        <label>Rent Per Day:</label> <input type="number" name="BikeRate" />
    </div>
    <div>
        <input type="submit" value="Add Bike" />

    </div>
</form>

