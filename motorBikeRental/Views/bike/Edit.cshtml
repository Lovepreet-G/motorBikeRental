@model motorBikeRental.Models.bikeDto

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Bike</h2>

<form method="POST" action="/bike/Update/@Model.BikeId">
    <input type="text" style="display:none;" name="BikeId" value="@Model.BikeId" />
    <div>
        <label>Brand:</label> <input type="text" name="BikeBrand" value="@Model.BikeBrand"/>
    </div>
    <div>
        <label>Model Name:</label> <input type="text" name="BikeModel" value="@Model.BikeModel" />
    </div>
    <div>
        <label>Rent Per Day:</label> <input type="number" name="BikeRate" value="@Model.BikeRate" />
    </div>
 
    <div>

        <input type="submit" value="Update" />
    </div>

</form>